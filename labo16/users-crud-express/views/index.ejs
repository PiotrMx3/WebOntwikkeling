<%- include('partials/header') %>

    <section>
        <header>
            <h1>Manage Users</h1>
        </header>

        <button type="button" id="create-btn"><a href="/users/create" class="btn">Create</a></button>

        <% for (let user of users) { %>
            <article class="card">
                <header>
                    <h2>
                        <%= user.name %>
                    </h2>
                    <p><strong>Username:</strong>
                        <%= user.username %>
                    </p>
                </header>
                <p><strong>Email:</strong>
                    <%= user.email %>
                </p>
                <address>
                    <strong>Address:</strong>
                    <%= user.address.street %>, <%= user.address.suite %>, <%= user.address.city %>, <%=
                                    user.address.zipcode %>
                </address>
                <p><strong>Phone:</strong>
                    <%= user.phone %>
                </p>
                <p><strong>Website:</strong> <a href="http://<%= user.website %>">
                        <%= user.website %>
                    </a></p>
                <p><strong>Company:</strong>
                    <%= user.company.name %>
                </p>
                <section class="container-btn">
                    <button type="button" id="delete-btn"><a href="/users/<%= user.id %>/delete"
                            class="btn">Delete</a></button>
                    <button type="button" id="update-btn"><a href="/users/<%= user.id %>/update"
                            class="btn">Edit</a></button>

                </section>
            </article>
            <% } %>
    </section>

    <%- include('partials/footer') %>