<%- include('partials/header') %>
    <h1>Word Guess</h1>

    <form action="/words" method="GET">
        <input type="text" name="q" value="">
        <select name="sortDirection">
            <option selected>asc</option>
            <option>desc</option>
        </select>
        <button type="submit">GO</button>
    </form>
    <ul>
        <% items.forEach(el=> { %>
            <% if (el.length> 5) { %>
                <li style="color: red">
                    <%= el %>
                </li>
                <% } else { %>
                    <li>
                        <%= el %>
                    </li>
                    <% } %>
                        <% }) %>
    </ul>
    <%- include('partials/footer') %>