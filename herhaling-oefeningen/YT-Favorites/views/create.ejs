<%- include('./partials/header') %>

    <main>
        <section id="container-login-form">

            <% if (flashMessage) { %>
                <h1 class=" <%= flashMessage.type %>">
                    <%= flashMessage.message %>
                </h1>
                <% } %>
                    <form action="/create" method="POST">

                        <label for="field-title">Titel:</label>
                        <input type="text" name="title" id="field-title">


                        <label for="field-url">Url:</label>
                        <input type="url" name="url" id="field-url">

                        <label for="field-description">Description:</label>
                        <textarea name="description" id="field-description"></textarea>
                        <br />
                        <label for="field-rating">Rating:</label>
                        <input type="number" name="rating" id="field-rating" min="1" max="10" value="0">
                        <input type="hidden" name="fav" id="field-fav" value="0">

                        <button type="submit">Submit</button>
                    </form>

        </section>

    </main>

    <%- include('./partials/footer') %>