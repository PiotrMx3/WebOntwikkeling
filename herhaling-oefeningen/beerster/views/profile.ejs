<%- include('./partials/header') %>
    <%- include('./partials/nav') %>

        <div>
            <div class="container mx-auto p-4 flex flex-1">
                <div class="w-full mr-4">
                    <div class="mt-8">
                        <h2 class="text-xl font-semibold mb-4">Profile</h2>
                        <div class="bg-white p-4 rounded-lg shadow-lg">
                            <div class="mb-4">
                                <label class="block text-gray-700 text-sm font-bold mb-2"
                                    for="username">Username:</label>
                                <p id="username">
                                    <%= user.username %>
                                </p>
                            </div>
                            <div>
                                <label class="block text-gray-700 text-sm font-bold mb-2" for="fullname">Full
                                    Name:</label>
                                <p id="fullname">
                                    <%= user.fullname %>
                                </p>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="mt-8">

                    <h2 class="text-xl font-semibold mb-4">Recent Check-ins</h2>



                    <% checkByUser.forEach(check=> { %>
                        <div>
                            <div class="bg-white rounded-lg shadow-md mt-4">

                                <div class="flex p-4"><img alt="Beer image" class="w-20 h-20 rounded-full resize-fit"
                                        src="<%= check.beer.logo %>">
                                    <div class="ml-4">
                                        <p class="text-gray-600"><b>
                                                <%= check.name %>
                                            </b> checked in at <span class="font-semibold">
                                                <%= check.bar.name %>
                                            </span></p>
                                        <p class="text-gray-600">Drinking: <span class="font-semibold">
                                                <%= check.beer.name %>
                                            </span>
                                        </p>
                                        <p class="text-gray-700">
                                            <%= check.comment %>
                                        </p>
                                        <p class="text-gray-600">Date: <%= formatDateTime(check.date) %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% }) %>


                </div>
            </div>



        </div>
        </div>
        </body>

        </html>