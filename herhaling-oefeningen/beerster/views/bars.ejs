<%- include('./partials/header') %>
    <%- include('./partials/nav') %>

        <div>

            <div class="container mx-auto p-4 flex flex-1 w-full">
                <div class="w-full mr-4">
                    <div class="mt-8">
                        <div class="mt-8">


                            <% bars.forEach(bar=> { %>

                                <a href="/bars/<%= bar.id %>">
                                    <div
                                        class="hover:shadow-lg transform hover:scale-105 transition-transform duration-300">
                                        <div class="bg-white rounded-lg shadow-md p-4 mb-4">
                                            <div class="grid grid-cols-2 gap-4">
                                                <div class="col-span-2">
                                                    <h2 class="text-xl font-semibold">
                                                        <%= bar.name %>
                                                    </h2>
                                                </div>
                                                <div class="col-span-2">
                                                    <div class="flex">
                                                        <% for( let i=0; i < 5; i++ ) { %>
                                                            <% if (i < Math.round(bar.rating)) { %>
                                                                <i class="fa fa-star text-yellow-400"></i>

                                                                <% } else { %>
                                                                    <i class="fa fa-star text-gray-300"></i>
                                                                    <% }%>

                                                                        <% } %>

                                                    </div>
                                                </div>
                                                <div class="col-span-2">
                                                    <p class="text-gray-500 mb-2">Location: <%= bar.location %>
                                                    </p>
                                                    <p class="text-gray-500 mb-4">Description: <%= bar.description %>
                                                    </p>
                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                </a>
                                <% }) %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        </body>

        </html>