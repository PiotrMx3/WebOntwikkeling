<!DOCTYPE html>
<%- include('partials/header') %>
<%- include('partials/nav') %>
  
    <main>
        <div class="header">
            <h2>Home</h2>
        </div>

        <div class="tweet_box">
            <% if (error) { %>
                <div class="error-notification">
                    You are not allowed to post an empty message
                </div>
             
            <% } %>
            <form method="post" action="/">
                <div class="tweet_box-input">
                    <img src="/images/avatars/JonDoe.png" alt="profile image">
                    <input type="hidden" name="username" value="JonDoe">
                    <input type="hidden" name="name" value="Jon Doe">
                    <textarea rows="4" cols="40" placeholder="What's happening?" name="text"></textarea>
                    <button>Post</button>
                </div>
            </form>

        </div>
        <section class="posts">

            <% posts.forEach(el => { %>
                
                <article class="post">
                    <div class="post_profile-image">
                        <img src="/images/avatars/<%= el.username %>.png">
                    </div>
                    <div class="post_body">
                        <div class="post_header">
                            <div class="post_header-text">
                                <h3><%= el.name %>
                                    <span class="header-icon-section">
                                        <a href="<%= el.username %>">@<%= el.username %></a>
                                    </span>
                                </h3>
                            </div>
            
                            <div class="post_header-description">
                              <%= el.text %>
                            </div>
            
                        </div>
                        <div class="post_footer">
                            <span class="material-icons">chat</span>
                            <span class="material-icons">repeat</span>
                            <span class="material-icons">favorite_border</span>
                            <span class="material-icons">file_upload</span>
                        </div>
            
                    </div>
                </article>
            <% }) %>
        
    </main>

<%- include('partials/aside') %>
    
<%- include('partials/footer') %>