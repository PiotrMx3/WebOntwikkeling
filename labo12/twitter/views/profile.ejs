<%- include("partials/header") %>
    <%- include("partials/nav") %>


        <main style="position: relative">
            <div class="header">
                <h2>
                    <%= profile.name %>
                </h2>
            </div>

            <img class="profile_banner" src="/images/banners/<%= profile.handle %>.png" />
            <img class="profile_avatar" src="/images/avatars/<%= profile.handle %>.png" />
            <section class="profile">
                <div class="profile_name">
                    <%= profile.name %>
                </div>
                <div class="profile_handle">
                    <%= profile.handle %>
                </div>
                <div class="profile_bio">
                    <%= profile.bio %>
                </div>
            </section>

            <section class="posts">


                <% profileTweets.forEach(el=> { %>
                    <article class="post">
                        <div class="post_profile-image">
                            <img src="/images/avatars/<%= el.handle %>.png" alt="java-logo">
                        </div>
                        <div class="post_body">
                            <div class="post_header">
                                <div class="post_header-text">
                                    <h3>
                                        <%= el.name %>
                                            <span class="header-icon-section">
                                                <a href="/<%= el.handle %>">@<%= el.handle %></a>
                                            </span>
                                    </h3>
                                </div>

                                <div class="post_header-description">
                                    <%= el.text %>
                                </div>

                            </div>
                            <div class="post_footer">
                                <span class="material-icons">chat</span>
                                <span class="material-icons">repeat</span>
                                <span class="material-icons">favorite_border</span>
                                <span class="material-icons">file_upload</span>
                            </div>

                        </div>
                    </article>

                    <% }) %>

            </section>

        </main>

        <%- include("partials/aside") %>

            </body>

            </html>